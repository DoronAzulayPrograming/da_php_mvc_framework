# Options -MultiViews
# RewriteBase /
# /{RewriteBaseValue}/index.php?url=$1 [QSA,L]
# ^(.+)$

<FilesMatch "\.php$">
    Deny from all
</FilesMatch>

<Files "index.php">
    Allow from all
</Files>

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^(.+)$ index.php?url=$1 [QSA,L]
</IfModule>